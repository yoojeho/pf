	script(type='text/javascript', src='https://code.jquery.com/jquery-3.2.1.min.js')
	script(type='text/javascript', src="https://cdnjs.cloudflare.com/ajax/libs/materialize/0.100.2/js/materialize.min.js")
 
	script.
		$(document).ready(function(){
			$('.parallax').parallax();
			
			//맨위로 버튼
			$('.fixed-action-btn').click( function() {
				$( 'html, body' ).animate( { scrollTop : 0 }, 400 );
				return false;
			});

			//contact message 줄수 제한
			$('#textarea1').keydown(function(){
				var rows = $('#textarea1').val().split('\n').length;
				var maxRows = 11;
				if( rows > maxRows){
					modifiedText = $('#textarea1').val().split("\n").slice(0, maxRows);
					$('#textarea1').val(modifiedText.join("\n"));
				}
			});
		});